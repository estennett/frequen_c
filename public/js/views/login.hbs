<!DOCTYPE html>
<html>
  <head>
    <title>frequen.c</title>
    <link type="text/css" rel="stylesheet" href="styles/normalize.css">
    <link type="text/css" rel="stylesheet" href="styles/main.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.3/jquery.min.js"></script>
    <script src="js/models/frequency.js"></script>
    <script src="js/models/podcast.js"></script>
    <script src="js/models/episodePreview.js"></script>
    <script src="js/views/frequency/frequencyView.js"></script>
    <script src="js/views/frequency/frequencyShow.js"></script>
    <script src="js/views/podcast/podcastShow.js"></script>
    <script src="js/views/episodePreviewView.js"></script>
    <script src="js/script.js"></script>
  </head>
  <body>
    <header>
      <a class="title" href="/">
        <img id="logo" src="img/frequenc_logo.jpg" alt="frequen.c logo">
      </a>
      <nav class="navbar">
        <ul class='sign-ins'>
        {{#if currentUser}}
          <li><a href='/logout'> Log Out {{currentUser.local.email}}</a></li>
          <li><a href="/secret">Secret page (only if authenticated)</a></li>
          {{else}}
          <li><a href="/login">Login</a></li>
          <li><a href="/signup">Signup</a></li>
        {{/if}}
        </ul>
      </nav>
    </header>

    <div class="signup_login_container clearfix">
      <div class="form_container">
        <h2>Login with Email</h2>

        {{#if message.length}}
          <div class="alert alert-danger">{{message}}</div>
        {{/if}}

        <form method="post" action="/login">
          <div class="form-group">
            <label for="email">Email</label>
            <input class="form-control" type="text" name="email" id="email">
          </div>

          <div class="form-group">
            <label for="email">Password</label>
            <input class="form-control" type="password" name="password" id="password">
          </div>

          <input class="btn btn-default" type="submit">
        </form>
      </div>
      <!-- Twitter Login -->
      <div class="twitter">
        <a href="/auth/twitter">
          <h2>Login with Twitter</h2>
          <img id="twitter-login" src="img/twitter.svg">
        </a>
      </div>
    </div>

    <footer>
      <ul>
        <li>Home</li>
        <li>My Profile</li>
        <li>My Frequencies</li>
        <li>Create a Frequency</li>
        <li>Search for Frequencies</li>
      </ul>
    </footer>
  </body>
</html>
